<!DOCTYPE html>
<html lang="ja">
 <head>
  <meta charset="UTF-8" />

  <title>Bookers</title>
 </head>

 <body>
  <% if @book.errors.any? %>
  <%= @book.errors.count %>error
  <ul>
   <% @book.errors.full_messages.each do |message| %>
    <li><%= message %>
     </li>
      <% end %>
   </ul>
   <% end %>
  <h1>Editing Book</h1>
  <%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>
  <p><%= f.submit 'Update Book' %>
   </p>
  <% end %>

  <%= link_to "Show", book_path(@book.id) %>
  <%= link_to "Back", books_path %>
 </body>
</html>